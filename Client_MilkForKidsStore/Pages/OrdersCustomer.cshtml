@page
@model Client_MilkForKidsStore.Pages.OrdersCustomerModel
@{
}
<div class="rts-shop-section section-gap">
    <div class="container">
        <div class="row">
            <div class="col-xl-3">
                <div class="side-sticky">
                    <div class="shop-side-action">
                        <div class="action-item">
                            <div class="action-top">
                                <span class="action-title">
                                    <i class="fa-sharp fa-solid fa-user"></i> Tài khoản của
                                    tôi
                                </span>
                            </div>
                            <ul style="list-style-type: none;">
                                <li>
                                    <a href="/CustomerInfo">
                                        <div class="color-item">
                                            <span class="color-name">Hồ sơ</span>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a href="/OrdersCustomer?status=-1">
                                        <div class="color-item">
                                            <span class="color-name">Đơn hàng của bạn</span>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <form id="logoutForm" method="post" asp-page="/AuthenticatePage/Login" asp-page-handler="Logout" style="display: inline;">
                                        <a href="" onclick="document.getElementById('logoutForm').submit(); return false;">
                                            <div class="color-item">
                                                <span class="color-name">Đăng xuất</span>
                                            </div>
                                        </a>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-9" style="border: 2px solid; border-radius: 10px; width: 800px; margin: 10px;">
                <div class="row g-3 my-2">
                    <div class="col-md-4">
                        <a href="/OrdersCustomer?status=-1"
                           class="btn btn-primary d-block"
                           style="text-decoration: none; color: black; border: 2px groove;">
                            Tất cả
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/OrdersCustomer?status=1"
                           class="btn btn-primary d-block"
                           style="text-decoration: none; color: black; border: 2px groove;">
                            Đã thanh toán
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/OrdersCustomer?status=2"
                           class="btn btn-primary d-block"
                           style="text-decoration: none; color: black; border: 2px groove;">
                            Đã hủy
                        </a>
                    </div>
                </div>
                <div class="col">
                    <table class="table bg-white rounded shadow-sm table-hover">
                        <thead>
                            <tr>
                                
                                <th scope="col">Mã đơn hàng</th>
                                <th scope="col">Giá tổng</th>
                                <th scope="col">Trạng thái</th>
                                
                                <th scope="col">Thời gian</th>
                                
                                @*<th scope="col"></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Sample Data -->
                            @foreach(var item in Model.Orders)
                            {
                                <tr>

                                    <td>@item.OrderId</td>
                                    <td>@item.TotalPrice VND</td>
                                    @if(@item.Status == 1) {
                                    <td>Đã thanh toán</td>
                                    } else if(@item.Status == 0) {
                                    <td>Chưa thanh toán</td>
                                    } else if(@item.Status == 2) {
                                    <td>Đã hủy</td>
                                    }
                                    <td>@item.OrderDate</td>

                                   @* <td>
                                        <a asp-page="/OrderCustomerDetail">
                                            <button>
                                                Xem
                                                chi tiết
                                            </button>
                                        </a>
                                    </td>*@
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
                @*<div class="container py-5">
                    <div class="col-12">
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-lg m-0">
                                <li class="page-item disabled">
                                    <a class="page-link rounded-0"
                                       href="MainController?action=ViewCustomerOrder&customer_id=1&index=0&status="
                                       aria-label="Previous">
                                        <span aria-hidden="true"><i class="bi bi-arrow-left"></i></span>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link"
                                       href="MainController?action=ViewCustomerOrder&customer_id=1&index=1&status=">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link"
                                       href="MainController?action=ViewCustomerOrder&customer_id=1&index=2&status=">2</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link rounded-0"
                                       href="MainController?action=ViewCustomerOrder&customer_id=1&index=2&status="
                                       aria-label="Next">
                                        <span aria-hidden="true"><i class="bi bi-arrow-right"></i></span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>*@
            </div>
        </div>
    </div>
</div>

