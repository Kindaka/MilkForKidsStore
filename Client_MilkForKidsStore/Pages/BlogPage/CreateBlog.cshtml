@page
@model Client_MilkForKidsStore.Pages.BlogPage.CreateBlogModel
@{
}

<!-- Blog Start -->
<div class="container py-5">
    <div class="row g-12">
        <div class="col-lg-12">
            <!-- Comment Form Start -->
            <div class="bg-light rounded p-5">
                <h3 class="text-uppercase border-start border-5 border-primary ps-3 mb-4">Create Blog</h3>
                <form id="createBlogForm" method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-12 col-sm-6">
                            <input type="text" id="blogTitle" name="BlogTitle" class="form-control bg-white border-0" placeholder="Blog Title" style="height: 55px;" required>
                        </div>
                        <div class="col-12">
                            <input type="file" class="form-control bg-white border-0" id="blogImage" name="BlogImage" placeholder="Image" style="height: 55px;">
                        </div>
                        <div class="form-group">
                            <label for="productIds">Select Products</label>
                            <select multiple class="form-control" id="productIds" name="ProductIds">
                                @foreach (var product in Model.Products)
                                {
                                    <option value="@product.ProductId">@product.ProductName - @product.ProductPrice.ToString("C")</option>
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <textarea class="form-control bg-white border-0" rows="5" id="blogContent" name="BlogContent" placeholder="Content" required></textarea>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Post Blog</button>
                        </div>
                    </div>
                </form>
                <div id="result" class="mt-3"></div>
            </div>
            <!-- Comment Form End -->
        </div>
    </div>
</div>