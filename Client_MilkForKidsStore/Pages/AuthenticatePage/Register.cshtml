@page
@model Client_MilkForKidsStore.Pages.AuthenticatePage.RegisterModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Sign Up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login-form-14/css/style.css">
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Sign Up</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image: url('/login-form-14/images/test.jpg');"></div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Sign Up</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                    </p>
                                </div>
                            </div>
                            <form method="post" class="signin-form">
                                <div class="form-group mb-3">
                                    <label asp-for="InfoView.Email" class="label">Email</label>
                                    <input asp-for="InfoView.Email" class="form-control" placeholder="Email" required value="@ViewData["Email"]">
                                    <span asp-validation-for="InfoView.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="InfoView.Password" class="label">Password</label>
                                    <input asp-for="InfoView.Password" type="password" class="form-control" placeholder="Password" required>
                                    <span asp-validation-for="InfoView.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="InfoView.ConfirmPassword" class="label">Confirm Password</label>
                                    <input asp-for="InfoView.ConfirmPassword" type="password" class="form-control" placeholder="Password" required>
                                    <span asp-validation-for="InfoView.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="InfoView.UserName" class="label">Username</label>
                                    <input asp-for="InfoView.UserName" class="form-control" placeholder="Username" required value="@ViewData["UserName"]">
                                    <span asp-validation-for="InfoView.UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign Up</button>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </form>
                            <p class="text-center">Already a member? <a asp-page="/AuthenticatePage/Login">Sign In</a></p>
                            <a asp-page="/Index">Back to Home Page</a>
                            @if (!string.IsNullOrEmpty(ViewBag.Message))
                            {
                                <p class="alert alert-danger" role="alert">@ViewData["Message"]</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/login-form-14/js/jquery.min.js"></script>
    <script src="~/login-form-14/js/popper.js"></script>
    <script src="~/login-form-14/js/bootstrap.min.js"></script>
    <script src="~/login-form-14/js/main.js"></script>
</body>
</html>