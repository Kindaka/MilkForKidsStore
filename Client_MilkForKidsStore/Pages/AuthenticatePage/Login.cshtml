@page
@model Client_MilkForKidsStore.AuthenticatePage.LoginModel
@{
}
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-4">
        <form method="POST">
            <div class="form-group">
                <label asp-for="InfoView.Email" class="control-label">Email</label>
                <input asp-for="InfoView.Email" class="form-control" value="@ViewData["Email"]" />
                <span asp-validation-for="InfoView.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfoView.Password" class="control-label">Password</label>
                <input asp-for="InfoView.Password" type="password" class="form-control" />
                <span asp-validation-for="InfoView.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-inline-block">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <div class="d-inline-block ml-2">
                    <input type="submit" value="Register" class="btn btn-primary" formaction="/Register/Register" />
                </div>
            </div>

        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <p class="alert alert-danger" role="alert">@ViewData["Message"]</p>
        }
    </div>
</div>